{% extends "base.html" %}

{% block title %}Modifier un site{% endblock %}

{% block content %}
    <h1>Liste des Enregistrements</h1>
    <h3><p>
    <a href="{{ url_for('edit_sites.ajouter_site') }}">➕ Ajouter un nouveau site</a>
</p></h3>
    <table border="1">
        <thead>
            <tr>
                {% for field in fields %}
                    <th>{{ field }}</th>
                {% endfor %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for record in records %}
                <tr>
                    {% for field in fields %}
                        <td>{{ record[field] }}</td>
                    {% endfor %}
                    <td>
                        <a href="{{ url_for('edit_sites.edit_record', record_index=loop.index0) }}">Éditer</a>

                        
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}